    "date-fns": "^3.3.1",
    "framer-motion": "^11.0.5",
    "quill": "^2.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.50.1",
    "react-quill": "^2.0.0",
    "react-router-dom": "^6.30.1",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^3.3.1",
    "zustand": "^4.5.1"
