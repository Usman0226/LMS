    "autoprefixer": "^10.4.21",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^27.0.1",
    "lighthouse": "^12.8.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "vite": "^5.1.3",
    "vitest": "^4.0.1"
  }
